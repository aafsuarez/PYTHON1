class BankingSystem:
    def __init__(self, username, password):
        self.user= username
        self.passw = password
        self.balance = 2000
        self.login_intentos= 0
        self.blocked= False

    def login(self, entered_user, entered_passw):
        if entered_user == self.user and entered_passw == self.passw:
            return True
        else:
            self.login_intentos += 1
            if self.login_intentos >= 3:
                self.blocked= True
                print("MUCHOS INTENTOS NO TE SABES LA CLAVE, BLOQUEADO X ESO")
            return False

    def deposit(self, amount):
        self.balance += amount
        print(f"DEPOSITO DE ${amount} REALIZADO. MONTO ACTUAL: ${self.balance}")

    def withdraw(self, amount):
        if self.balance >= amount:
            self.balance -= amount
            print(f"RETIRO DE ${amount} REALIZADO. MONTO ACTUAL: ${self.balance}")
        else:
            print("FONDO INSUFICIENTE.")

    def view_balance(self):
            print(f"MONTO ACTUAL: ${self.balance} ERES RICOOOOO!!!!!!")

    def transfer(self, recipient, amount):
        if self.balance >= amount:
            self.balance -= amount
            print(f"TRANFERENCIA DE ${amount} PARA {recipient} SE REALIZO DE MANERA EFECTIVA. NUEVO MONTO: ${self.balance}")
        else:
            print("FONDO INSUFICIENTE")

    def menu(self):
        print("\n=== BANCA TODO USO MENU ===")
        print("1. DEPOSITO")
        print("2. RETIRO")
        print("3. BALANCE ACTUAL")
        print("4. TRANSFERIR")
        print("5. CERRAR")
        print("00. EASTER")


# PROGRAMA
def main():
    # USUARIO1
    user1_username = "local"
    user1_password = "host"
    user1_account = BankingSystem(user1_username, user1_password)
    # USUARIO2
    user2_username = "aafs"
    user2_password = "aafs1"
    user2_account = BankingSystem(user2_username, user2_password)

    current_user = None
    while current_user is None:
        entered_user = input("USUARIO: ")
        entered_passw = input("CLAVE: ")

        if user1_account.login(entered_user, entered_passw):
            current_user = user1_account
        elif user2_account.login(entered_user, entered_passw):
            current_user = user2_account
        else:
            print("USUARIO O CLAVE INVALIDA")

    #MENU 
    while True:
        current_user.menu()
        choice = input("SELECCIONA UNA OPCION: ")

        if choice == "1":
            #DEPOSITO
            amount = float(input("INGRESE EL MONTO DEL DEPOSITO: "))
            current_user.deposit(amount)
        elif choice == "2":
            #RETIROS
            amount = float(input("INGRESE EL MONTO DEL RETIRO: "))
            current_user.withdraw(amount)
        elif choice == "3":
            #VER SALDO EN CUENTA 
            current_user.view_balance()
        elif choice == "4":
            #TRANSFERIR
            recipient = input("INGRESE EL USUARIO A TRANSFERIR: ")
            amount = float(input("INGRESE EL MONTO A TRANSFERIR: "))
            current_user.transfer(recipient, amount)
        elif choice == "5":
            #SALIR
            print("GRACIAS POR VISITAR SU CUENTA! HASTA PRONTO!! :)")
            break
        elif choice == "00":
            # EASTER EGG
            print("EASTER EGG, ¿Cuál es el último animal que subió al arca de Noé? El del-fin.")
            break
        else:
            print("SELECCION INVALIDA, INTENTE OTRA OPCION")

if __name__ == "__main__":
    main()
